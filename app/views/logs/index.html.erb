<main id="logs" class="container-md mt-3">
  <span class="fs-1">Total: $<%= @logs.sum(:amount) %></span>
  <% @logs.each_with_index do |log, idx| %>
    <%= render log %>
    
   
  <% end %>
</main>


<div class="fixed-bottom">
  <%= link_to "ADD TRANSACTION", new_group_log_path, class: "btn btn-new text-white rounded-0 d-flex align-items-center justify-content-center" %>
