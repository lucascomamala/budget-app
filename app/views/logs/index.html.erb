<nav class="nav-bar d-flex justify-content-between align-items-center">
  <span id="menu-button" class="material-symbols-outlined ms-2"><%= link_to 'menu', root_path, class: 'text-white' %></span>
  <span class='text-uppercase'><%= @group.name %></span>
  <span id="logout-button" class="material-symbols-outlined me-2"><%= link_to "logout", destroy_user_session_path, data: { "turbo-method": :delete }, class: 'text-white' %></span>
